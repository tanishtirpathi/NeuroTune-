{
  "manifest_version": 3,
  "name": "Media Controller Bridge",
  "version": "1.0",
  "description": "Bridge between browser media and Electron app",
  "permissions": ["scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Media Controller Bridge"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
} 